import os

honey_version = "0_23"

env=Environment()
env.Append(CXXFLAGS = "-std=c++11")

libraries = ["libHoney.a", "libnfd.a", "boost_filesystem-mt", "boost_system-mt"]

env.AppendUnique(FRAMEWORKS = Split("OpenGL SDL2 SDL2_image SDL2_mixer SDL2_ttf AppKit"))

WorldBuilder = env.Program(target = "WorldBuilder",
  source = Glob("./Source/*.cpp"),
  LIBS = libraries,
  LIBPATH=["./Honey/%s/Library" % honey_version, "./Lib"],
  CPPPATH="./Honey/%s/Includes" % honey_version)

Default()

def cleanObjects(target, source, env):
  os.system("rm ./Source/*.o")

cleanup = Command("cleanObjects", [], cleanObjects)
Depends(cleanup, BUILD_TARGETS)
#BUILD_TARGETS.append("cleanObjects")